<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="32dp" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/menu_header_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/menu_header_container"
        app:layout_constraintHeight_percent="0.0516"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECP"
            android:textColor="#D1232A"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans" />

        <TextView
            android:id="@+id/election_commission_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Election Commission Pakistan"
            android:textColor="#667085"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosansregular" />
    </LinearLayout>

    <!-- Banner -->
    <ImageView
        android:id="@+id/nominee11"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/nominee11"
        app:layout_constraintTop_toBottomOf="@id/menu_header_container"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_left"
        app:layout_constraintHeight_percent="0.3438" />

    <LinearLayout
        android:id="@+id/details_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/nominee11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Imran Khan"
            android:layout_weight="1"
            android:textSize="24sp"
            android:fontFamily="@font/nunito_sansbold"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/pti_logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PTI"
            android:textSize="20sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_sansbold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/nomineeDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/details_heading">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sansbold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="- Aitchison College, Lahore\n- Royal Grammar School, Worcester\n- University of Oxford (PPE)"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- Background -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sansbold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Former cricketer and philanthropist. Led Pakistan to victory in the 1992 Cricket World Cup. Founded Shaukat Khanum Hospital. Entered politics in 1996 by founding PTI."
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- Experience -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sansbold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="- Prime Minister of Pakistan (2018â€“2022)\n- Member of National Assembly\n- Chairman of PTI"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- Key Agenda -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Agenda"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sansbold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="- Anti-corruption and transparency\n- Education and health reforms\n- Youth empowerment\n- Economic stability"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow on Social Media"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/nomineeDetailsLayout" >



    <LinearLayout
        android:id="@+id/onTwitterClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onTwitterClick">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_twitter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:textSize="16sp"
            android:textColor="#1DA1F2"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- SOCIAL LINK 2 - Facebook -->
    <LinearLayout
        android:id="@+id/onFacebookClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onFacebookClick">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textSize="16sp"
            android:textColor="#1877F2"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/onInstagramClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onInstagramClick">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_instagram" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Instagram"
            android:textSize="16sp"
            android:textColor="#1877F2"
            android:layout_marginStart="12dp" />
    </LinearLayout>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
